<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_top_dao"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_top_dao"/>
        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="房产咨询"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_top_icon"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_guide_indicator_page_normal"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/singletu_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/single_layout_pinluns"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:padding="8dp"
              android:background="@drawable/btn_bg_pinglun"
              android:orientation="horizontal">
              <ImageView
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@mipmap/icon_post_comment"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="2dp"
                  android:text="发表评论"/>

          </LinearLayout>
        <LinearLayout
            android:id="@+id/single_layout_mess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_msg_s"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_galley_comment"/>
            <TextView
                android:id="@+id/tv_msg_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
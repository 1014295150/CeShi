<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#000"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_top_dao1"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_top_dao"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/tv_top_num1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="28dp"
            android:textColor="#fff"/>
            <TextView
                android:id="@+id/tv_top_num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/3"
                android:textSize="24dp"
                android:textColor="#fff"/>

        </LinearLayout>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_top_icon1"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_guide_indicator_page_normal"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/linesletu_view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/single_layout_pinluns1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="8dp"
            android:background="@drawable/btn_bg_pinglun2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_post_comment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="发表评论"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/single_layout_mess1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_msg_s1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_galley_comment"/>
            <TextView
                android:id="@+id/tv_msg_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:textColor="#bbb"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
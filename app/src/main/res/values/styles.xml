<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    
    <style name="text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="text_lsit_style">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="text_list_small_style" parent="@style/text_lsit_style">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#999</item>
    </style>
    <style name="text_list_more_style" parent="@style/text_lsit_style">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#555</item>
    </style>

</resources>
